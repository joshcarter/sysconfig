# If not running interactively, don't do anything
[ -z "$PS1" ] && return

export PATH=$PATH:/sbin:/usr/sbin:/usr/local/sbin:/usr/local/bin

if [ -d "/Users/Josh/bin" ]; then
   export PATH=$PATH:/Users/Josh/bin
fi

if [ -d "/usr/local/scala/bin" ]; then
   export PATH=$PATH:/usr/local/scala/bin
fi

if [ -d "/Developer/usr/bin" ]; then
   export PATH=$PATH:/Developer/usr/bin
fi

if [ -d "/Users/Josh/Library/Application Support/TextMate/PlugIns/AckMate.tmplugin/Contents/Resources" ]; then
    alias ack="/Users/Josh/Library/Application\ Support/TextMate/PlugIns/AckMate.tmplugin/Contents/Resources/ackmate_ack"
fi

export JAVA_HOME=/Library/Java/Home

# Don't put duplicate lines in the history
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1000
HISTFILESIZE=2000

# Append to the history file, don't overwrite it
shopt -s histappend

# Check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# Perforce config
if [ -f "$HOME/.p4config" ]; then
  export P4CONFIG="$HOME/.p4config"
fi

export EDITOR=emacs

alias l="ls -lh"
alias la="ls -lah"

PS1="\h:\W âˆ´ "

[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm && rvm use 1.9.3
